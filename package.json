{
	"name": "fullstack-shopping-cart",
	"version": "1.0.0",
	"description": "Laptop shopping cart",
	"main": "server.js",
	"author": "Kishan V",
	"license": "ISC",
	"engines": {
		"node": "10.15.3"
	},
	"scripts": {
		"start:dev": "nodemon server.js",
		"start:client": "npm run start:dev --prefix client",
		"dev": "concurrently \"npm run start:dev\" \"npm run start:client\"",
		"install:client": "npm install --prefix client",
		"build": "npm run build --prefix client",
		"start": "node server.js",
		"heroku-postbuild": "npm run install:client && npm run build"
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"concurrently": "^3.5.1",
		"dotenv": "^8.2.0",
		"express": "^4.16.4",
		"express-session": "^1.15.6",
		"is-empty": "^1.2.0",
		"mongoose": "^5.5.12",
		"passport": "^0.6.0",
		"passport-local": "^1.0.0",
		"passport-local-mongoose": "^4.5.0",
		"validate-phone-number-node-js": "^0.0.1",
		"validator": "^13.7.0"
	}
}
